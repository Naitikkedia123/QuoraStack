<div class="navbar">
    <!-- Left Section -->
    <div class="nav-left">
        <div class="logo">Quora</div>
    </div>

    <!-- Center Icons -->
    <div class="nav-icons">
        <a href="/post" id="h"><i class="fas fa-home"></i></a>
        <a href="/post/follow" id="f"><i class="fas fa-list"></i></a>
        <a href="/post/yourpost" id="y"><i class="fas fa-pen"></i></a>
        <a href="/post/people" id="c"><i class="fa-solid fa-people-group"></i></a>
    </div>

    <!-- Search Bar -->
    <div class="search-box">
        <form action="/search" method="POST">
            <input type="text" placeholder="Search Quora..." name="search">
            <button><i class="fas fa-search"></i></button>
        </form>
    </div>

    <!-- Right Section -->
    <div class="nav-right">
        <form action="https://www.quora.com/"><button class="quora-plus">Try Quora+</button></form>

        <% if (currentUser) { %>
            <!-- Show Logout and Username if Logged In -->
            <span class="user-name">Hello, <%= currentUser.username %></span>
            <form action="/logout">
                <button class="logout-btn">Logout</button>
            </form>
        <% } else { %>
            <!-- Show Login and Signup if Not Logged In -->
            <a href="/login" id="login-btn">Login</a>
            <a href="/signup" id="signup-btn">Signup</a>
        <% } %>

        <form action="/post/new" method="get">
            <button class="add-question">Add New Post</button>
        </form>
    </div>
</div>

